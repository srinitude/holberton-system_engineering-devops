#!/usr/bin/env bash
# Redict an endpoint to another page

apt-get update
apt-get -y install nginx
service nginx start
echo "Holberton School" > /usr/share/nginx/html/index.html
old="location / {\n\ttry_files $uri $uri/ =404;\n}"
new="location / {\n\ttry_files $uri $uri/ =404;\n}\nlocation /redirect_me {\n\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}"
sed -i "s/$old/$new/" /etc/nginx/sites-enabled/default
service nginx stop
service nginx start
